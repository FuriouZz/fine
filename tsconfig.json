{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "lib/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "lib/typings"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./tmp",
    "./config",
    "./public",
    "./build"
  ],
  "include": [
    "./lib",
    "./sample"
  ]
}